
<a href="/movies" class="btn btn-primary">Movies</a>
<a href="/directors" class="btn btn-primary">Directors</a>
<a href="/actors" class="btn btn-primary">Actors</a>

<h1>Actors</h1>

<p><a href="/actors/new_form" class="btn btn-primary">Add a New Actor</a></p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Bio</th>
      <th>DOB</th>

    </tr>
  </thead>

  <% @actors.each do |actor| %>
  <tr>
    <td><img src="<%= actor.image_url %>"></td>
    <td><%= actor.name %></td>
    <td><%= actor.bio %></td>
    <td><%= actor.dob %></td>

    <td>
      <a href="/actors/<%= actor.id %>" class="btn btn-primary">
        Details
      </a>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>/edit_form" class="btn btn-primary">
        Edit
      </a>
    </td>
    <td>
      <a href="/delete_actor/<%= actor.id %>" class="btn btn-primary">
        Delete
      </a>
    </td>
  </tr>
  <% end %>

</table>
