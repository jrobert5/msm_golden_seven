<div class="page-header">
  <h1>Edit Director <%= @director.id %></h1>
</div>

<form class="form-horizontal" action = "/update_director/<%= @director.id %>">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-4">
      <input type="text" id="name" name="name" value="<%= @director.name %>" class="form-control">
    </div>
  </div>

  <!-- Label and input for year -->
  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">
      DOB
    </label>
    <div class="col-sm-2">
      <input type="text" id="dob" name="dob" value="<%= @director.dob %>" class="form-control">
    </div>
  </div>



  <!-- Label and input for description -->
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">
      Bio
    </label>
    <div class="col-sm-4">
      <textarea id="bio" name="bio"  class="form-control" rows="3"><%= @director.bio %></textarea>
    </div>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-4">
      <input type="text" id="image_url" name="image_url" value= "<%= @director.image_url %>" class="form-control">
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update director" class="btn btn-primary">
    </div>
  </div>
</form>
