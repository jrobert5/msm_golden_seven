<div class="page-header">
  <h1>Edit Movie</h1>
</div>

<form class="form-horizontal" action = "/update_movie/<%= @movie.id %>">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">
      Title
    </label>
    <div class="col-sm-4">
      <input type="text" id="title" name="title" value="<%= @movie.title %>" class="form-control">
    </div>
  </div>

  <!-- Label and input for year -->
  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">
      Year
    </label>
    <div class="col-sm-2">
      <input type="text" id="year" name="year" value="<%= @movie.year %>" class="form-control">
    </div>
  </div>

  <!-- Label and input for duration -->
  <div class="form-group">
    <label for="duration" class="col-sm-2 control-label">
      Duration
    </label>
    <div class="col-sm-4">
      <input type="text" id="duration" name="duration" value= "<%= @movie.duration %>" class="form-control">
    </div>
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">
      Description
    </label>
    <div class="col-sm-4">
      <textarea id="description" name="description"  class="form-control" rows="3"><%= @movie.description %></textarea>
    </div>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-4">
      <input type="text" id="image_url" name="image_url" value= "<%= @movie.image_url %>" class="form-control">
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Movie" class="btn btn-primary">
    </div>
  </div>
</form>
